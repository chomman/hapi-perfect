{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["es2015"],
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",   
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}